<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NFC Write Mode"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Card Token to Write:"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etCardToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Paste or enter card token"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnWriteCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write Card to NFC Tag"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvWriteStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a token and tap Write to begin"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />

</LinearLayout>
